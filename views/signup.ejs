    border-radius: 4px;
    outline: none;
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
}

#newsletter button {
    background-color: rgb(80, 164, 209);
    white-space: nowrap;
    color: #fff;
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    
}

#newsletter .form {
    display: flex;
    width: 40%;

}

