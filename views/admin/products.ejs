<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Manage Products</title>
    <link rel="stylesheet" href="/static/styles/admin.css">
</head>
<body>

    <h1>Manage Products</h1>
    
    <section id="product-management">
        <button id="add-product-btn">Add New Product</button>

        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product => { %>
                    <tr>
                        <td><%= product.name %></td>
                        <td><%= product.price %></td>
                        <td><%= product.description %></td>
                        <td>
                            <a href="/admin/products/<%= product._id %>/edit" class="edit-btn">Edit</a>
                            <a href="/admin/products/<%= product._id %>/delete" class="delete-btn">Delete</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </section>

   
</body>
</html>
