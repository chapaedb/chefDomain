<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Manage Users</title>
    <link rel="stylesheet" href="/static/styles/admin.css">
</head>
<body>

    <h1>Manage Users</h1>
    
    <section id="user-management">
        <table>
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.role %></td>
                        <td>
                            <!-- Edit Button -->
                           
                            
                            <!-- Delete Button -->
                            <form action="/admin/users/<%= user._id %>/delete" method="POST" style="display:inline;">
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this user?');" class="delete-btn">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </section>

</body>
</html>
